<%# er pe %>
<h1>My Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
  <li>
    <% if task.completed == true %>
      <%= "☑" %>
    <% else %>
      <%= "☐" %>
    <% end %>
      <%= link_to task.title, task_path(task) %>
      <%= link_to "🗑", task_path(task),  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  </li>
  <% end %>
</ul>

<p><%= link_to "Add new task", "tasks/new" %></p>
